.navigation.sticky
  .inner
    %nav.top-bar
      %ul.title-area
        %li.name
          %h1= link_to "Home", root_path
        %li.toggle-topbar.menu-icon
          = link_to "#" do
            %span Menu
      %section.top-bar-section
        %ul.left.mobile-user-actions
          - if user_signed_in?
            %li
              = link_to "Measurements", measurements_path
          - else
            %li
              = link_to "Sign In with Fitbit", user_omniauth_authorize_path(:fitbit)
